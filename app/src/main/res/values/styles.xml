<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CalendarWidgetHeader">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/darker_grey</item>
    </style>
    <style name="CalendarWeekdayHeader">
        <item name="android:textColor">@color/dark_grey</item>
    </style>
    <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/darker_grey</item>
        <item name="android:textColorPrimary">@color/darker_grey</item>
        <item name="android:background">@color/white</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>
    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/dark_grey</item>
    </style>
    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/dark_grey</item>
    </style>
</resources>